<h1>Listing payments</h1>

<table>
  <tr>
    <th>Loan</th>
    <th>Payment value</th>
    <th>Paid</th>
    <th>Payment date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @payments.each do |payment| %>
  <tr>
    <td><%= payment.payment_value %></td>
    <td><%= payment.paid %></td>
    <td><%= payment.payment_date %></td>
    <td><%= link_to 'Show', [@loan, payment] %></td>
    <td><%= link_to 'Edit', edit_loan_payment_path(@loan, payment) %></td>
    <td><%= link_to 'Destroy', [@loan, payment], confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

